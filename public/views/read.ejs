<div class = readingcontainer>
    <p class= "wraptext titletext">(<span class = upvotetext><%= posts.popularity %></span>) <%= posts.title %> - <a class = authortext href="/user/<%= posts.author %>"><%= posts.author %></a></p></div>
    
<div class= readingcontainer>
    <p class = "readingheader"><strong>Story:</strong></p>
    <p class=wraptext><%= posts.text %></p>
    <form action="/read/<%= posts._id %>/upvote" method="POST">
        <button class = "upvotebutton"><i class="fa fa-arrow-up" aria-hidden="true"></i>Like</button>
    </form>
</div> 
<div class = choicecontainer>
    <form action="/read" method="GET" id="choice">
        <input type="hidden" name="parentid" value="<%= posts._id %>">
        <button name="choiceP" value="A" class="choicebutton"><%= posts.choiceA %></button>
        <button name="choiceP" value="B" class="choicebutton"><%= posts.choiceB %></button>
        <% if(posts.choiceC!=""){ %>
            <button name="choiceP" value="C" class="choicebutton"><%= posts.choiceC %></button>
        <% } %>
        <% if(posts.choiceD!=""){ %>
            <button name="choiceP" value="D" class ="choicebutton"><%= posts.choiceD %></button>
        <% } %>
    </form>
</div>

<p class = submissionButton><a class = registerlink href="/read/<%= posts.parentid %>">Previous Story</a></p>

<h1><a class = optioncontainer href="/read/search?parentid=<%= posts.parentid %>&choiceP=<%= posts.choiceP %>">See all versions</a></h1>
<h1><a class = optioncontainer href="/read/new?parentid=<%= posts.parentid %>&choiceP=<%= posts.choiceP %>">Write your own version</a></h1>

<button id="comment-collapse">See comments</button>
    <div class=commentscontainer>
    <form action = "/read/<%= posts._id %>" method="POST">
        <input type="text" name="comment"  placeholder="Submit a comment" pattern=".{3,}" title="Three or more characters" required>
        <input type="hidden" name="parentid" value="<%= posts._id %>">
        <button>Submit</button>
    </form>    
    <% posts.comments.forEach(function(comment){ %>
        <p class = commenttext><%= comment.text %></p>
        <p class = commentinfo> User: <%= comment.author %></p>
        <p class = commentinfo> Date:
        <%= comment.date.getMonth() + 1%>/<%= comment.date.getDate() %>/<%= comment.date.getFullYear() %>
        </p>
        <p></p> <!-- skip a line -->
    <% }); %>
    </div>

